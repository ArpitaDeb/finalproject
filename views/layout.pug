doctype html
html(lang='en')
  head
    title= title
    style(type="text/css").
        body {
        background: ghostwhite;
        font-family: Arial, Helvetica, sans-serif;
        }
        body > h1 {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 20px;
        font-weight: bold;
        padding-left: 16px;
        color: black;
        }
       
        #subscription {
            background: black;
        }   
        #logo {
            width:10%;
            height: 50px;
        }
        #banner {
            text-align: center;
            line-height: 50px;
        }
        #banner a {
            color:  #179860 ; 
            font-size: 15px;
        
            font-style: normal;
        }
        #banner span i{
           padding-left:7px;
           text-align: center;
            color:  #44b85e ; 
            font-size: 20px;
          
            font-style: normal;
         
        }

        span #slogan {
       
            margin-left: 10px;
            color:white;
            text-align:center;
            background: black;
            text-shadow: 2px gray;
            font-style: italic;
            font-size:20px;
            font-weight: bold;
            height:50px;
            position: relative;
            text-shadow: 0 0 2px #fff;
        }
        span .shopping-badge {
            width: 100px;
            height: 100px;
            background: #44b85e; 
            top:2rem;
            right:3rem;
            
            text-align: center;
            line-height: 2rem;;
            font-size: 15px;
            border-radius: 50%;
            color:black;
            -webkit-transition: width 2s; /* Safari */
            transition: width 2s;
           
      
        }
        span .badge: hover {
            background: green;
        }
        ul.nav-group {
            list-style-type: none;
            margin: 0;
            padding-left:0;
            height: 60px;
            line-height: 60px;
            font-size: 25px;
            overflow: hidden;
            background-color:ghostwhite;
            color: black;
            align: center;
        }

        li.nav .nav-dropbtn {
            float: left;
            margin: 0px;
            width: 350px;
            height: 60px;
            color: black;
            background-color:ghostwhite
         
        }

        li.nav a, .nav-dropbtn {
            display: inline-block;
            color: black;
            font-weight: bold;
            width: 350px;
            height: 60px;
           
            text-align: center;
            
            text-decoration: none;
        }

       
        li.nav a:hover, .nav-dropdown:hover .nav-dropbtn {
            background-color: #44b85e;
         
            text-decoration: underline;
        }

        li.nav-dropdown {
            display: inline-block;
        }

        .nav-dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;      
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .nav-dropdown-content a {
            color: black;
            padding: 12px 16px;
            font-size:20px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

        .nav-dropdown-content a:hover {background-color: #179860}

        .nav-dropdown:hover .nav-dropdown-content {
            display: block;
        }
            
        
  block scripts
  body
    block header
    block menu
    block content
    block foot